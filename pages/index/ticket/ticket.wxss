@import "ticket-gird/ticket-gird-template.wxss";
@import "ticket-data/ticket-data-template.wxss";
@import "../make-ticket/make-ticket-template.wxss";
@import "../../../wxParse/wxParse.wxss";
.banner {
  width: 100%;
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 300rpx;
}

.desc {
  width: 85%;
  min-height: 20rpx;
  padding: 19rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  border: 1px solid #e3e3e3;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  font-size:24rpx;
  color:#666;
  font-family:MicroSoft YaHei;
}

.time_status {
  width: 90%;
  margin-bottom: 20rpx;
}

.time_status icon {
  vertical-align: middle;
}

.time_status text {
  margin-left: 10rpx;
}

.search {
  background-color: #f2f2f2;
  height: 1.5rem;
  width: 90%;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  border-radius: 4px;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 24rpx;
}

.placeholder {
  font-size: 24rpx;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.xx-img {
  margin: auto 20rpx auto 0;
}

.tickets-container {
  width: 90%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.ticket-btn {
  width: 90%;
  background: #09bb07 !important;
  height: 80rpx;
  line-height: 80rpx;
}
.ticket-top{
  border-radius:10rpx;
  margin-top:20rpx;
  text-align:center;
  font-size:18px;
  text-decoration:none;
  color:#FFFFFF;
}